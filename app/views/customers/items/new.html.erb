<!--新規登録画面-->
<h1>商品投稿</h1>
<%= form_with model:@item, url: items_path, local:true do |f| %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品画像</h4>
 
  <h4>値段</h4>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>目的</h4>
  <%= f.select :purpose, Item.purposes.keys.map {|k| [I18n.t("enums.item.purpose.#{k}"), k]} %>
  <h4>誰に向けたプレゼント</h4>
  <h4>年齢層</h4>
  <h4>性別</h4>
  <%= f.submit '投稿' %>
<% end %>